<h1>Productos Real Time</h1>
<hr />
<form id="createForm" method="post">
    <div class="m-2">title: <input type="text" id="title"></div>
    <div class="m-2">Description: <input type="text" id="description"></div>
    <div class="m-2">Price: <input type="text" id="price"></div>
    <div class="m-2">Code: <input type="text" id="code"></div>
    <div class="m-2">Stock: <input type="text" id="stock"></div>
    <div class="m-2">Category: <input type="text" id="category"></div>
</form>
<button id="createBtn" class="btn btn-primary">Agregar producto</button>
<hr />
<table id="productsTable" class="table table-striped">
    <thead>
        <tr>
            <td>title</td>
            <td>description</td>
            <td>price</td>
            <td>code</td>
            <td>Stock</td>
            <td>category</td>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.price}}</td>
                <td>{{this.code}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.category}}</td>
                <td><button class="btn btn-danger" onclick="deleteProduct('{{this.id}}')">Eliminar</button></td>
            </tr>
            {{/each}}
    </tbody>
</table>

<script src="/socket.io/socket.io.js"></script>
<script src="/index.js"></script>